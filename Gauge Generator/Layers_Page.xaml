<Page x:Class="Gauge_Generator.Layers_Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Gauge_Generator"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="350"
      Title="Layers list">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="60px" />
        </Grid.RowDefinitions>
        <ListBox Grid.Row="0" Margin="15, 20, 15, 5" Background="#B6B6B6" x:Name="layers_view" SelectionChanged="Layers_view_SelectionChanged" MouseDoubleClick="Layers_view_MouseDoubleClick">
        </ListBox>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="New" ToolTip="Create new layer" Click="New_layer_btn"></Button>
            <Button Content="Proj" ToolTip="Change settings project" Click="Open_proj_settings"></Button>
            <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />
            <Button IsEnabled="False" x:Name="del_btn" Content="Del" ToolTip="Delete selected layer" Click="Delete_layer_btn"></Button>
            <Button IsEnabled="False" x:Name="edit_btn" Content="Edit" ToolTip="Edit properties of selected layer" Click="Edit_layer_btn"></Button>
            <Button IsEnabled="False" x:Name="up_btn" Content="Up" ToolTip="Move up selected layer" Click="Moveup_layer_btn"></Button>
            <Button IsEnabled="False" x:Name="dn_btn" Content="Dn" ToolTip="Move down selected layer" Click="Movedn_layer_btn"></Button>
        </StackPanel>
    </Grid>
</Page>
